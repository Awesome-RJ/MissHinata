name: Format Python code
on: 
  push: 
    branches: [Lilly]
  pull_request:
    branches: [Lilly]
jobs:
  Autoyapf:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@master
      - name: Auto yapf
        uses: imDivu/yapf-action@master
      - name: Create Pull Request
        uses: peter-evans/create-pull-request@master
        with:
          commit-message: Automated code formatting.
          committer: imDivu<imDivu@users.noreply.github.com>
          title: Automated code formatting.
          body: This is an automated code formatting pull request.
          labels: Code Formatting
          reviewers: imDivu 
          branch: autofix
